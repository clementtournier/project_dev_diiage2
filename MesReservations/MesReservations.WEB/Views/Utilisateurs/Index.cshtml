@model List<MesReservations.MODEL.Userm>
@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="dt-table">
    <thead>
        <tr>
            <th>
                <h4>Nom Utilisateur</h4>
            </th>
            <th>
                <h4>Prenom</h4>
            </th>
            <th>
                <h4>Email</h4>
            </th>
            <th>
                <h4>Password</h4>
            </th>
            <th>
                <h4>Last_Login</h4>
            </th>
            <th>
                <h4>Deconnexion</h4>
            </th>
            <th>
                <h4>Nom Profil</h4>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom_User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Last_Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deconnexion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom_Profil)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_User }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID_User }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_User })
                </td>
            </tr>

        }

    </tbody>

</table>


@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dt-table').DataTable();
        });
    </script>
}
